# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
# GET     /                           controllers.HomeController.index(p:Option[Int])
# URLにパラを用意　/:<name>
# GET     /:id               controllers.HomeController.index(id:Int)
# GET     /:id+:name               controllers.HomeController.index(id:Int, name:String)
# GET     /:id               controllers.HomeController.index(id:Int, name:Option[String])
# GET     /                           controllers.HomeController.index(name:Option[String])

GET / controllers.HomeController.index()
GET /add controllers.HomeController.add()
POST /create controllers.HomeController.create()
# POST /form controllers.HomeController.form()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


